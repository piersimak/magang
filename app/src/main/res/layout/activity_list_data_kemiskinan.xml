<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/BackgroundYellow"
    android:weightSum="10"
    android:layout_height="match_parent"

    tools:context="diginetmedia.com.sikedes.activity.ListDataKemiskinan">
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnjudul"
        android:layout_weight="0.6"
        android:text="Daftar Kemiskinan Di Dusun Tambakbayan"
        android:background="@drawable/selector_button_without_border"
        android:layout_height="0dp" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/RecyclerViewDusun"
        android:layout_weight="8.6"
        android:layout_height="0dip">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.8"
        android:weightSum="2"
        android:layout_height="0dip">
        <Button
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="Filter"
            android:layout_height="match_parent"
            android:background="@drawable/selectorbutton" />
        <Button
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="Urutkan"

            android:layout_height="match_parent"
            android:background="@drawable/selectorbutton" />
    </LinearLayout>

</LinearLayout>
