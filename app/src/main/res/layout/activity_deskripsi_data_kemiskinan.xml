<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="diginetmedia.com.sikedes.activity.DeskripsiDataKemiskinan"
    android:background="@color/BackgroundYellow">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            cardview:cardElevation="3dp"
            android:layout_weight="9"
            cardview:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/gridgambar"
                    android:layout_height="300dp">

                </android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Nama"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Alamat"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Nomor KK"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Kondisi"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:text="TAMBAHKAN KE KERANJANG BANTUAN"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/ButtonGreen"
            android:textColor="@color/ButtonTextColor"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
